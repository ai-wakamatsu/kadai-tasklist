<h1>タスクの作成</h1>

<%= form_with(model: @task, local: true) do |f| %>
  <% if @task.errors.any? %>
          <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
  <% end %>
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>

  <%= f.label :status, '状況' %>
  <%= f.text_field :status %>
  
  <%= f.submit '投稿' %>
<% end %>

<%= link_to '一覧に戻る', root_url %>